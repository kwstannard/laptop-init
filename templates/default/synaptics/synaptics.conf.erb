Section "InputClass"
	Identifier      "touchpad catchall"
	MatchIsTouchpad "on"
	Driver          "synaptics"
	Option		"TapButton1"	"1"
	Option		"TapButton2"	"3"
	Option		"TapButton3"	"2"
	Option		"VertTwoFingerScroll"	"1"
	Option		"HorizTwoFingerScroll"	"1"
	Option		"PalmDetect"		"1"
EndSection
